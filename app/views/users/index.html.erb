<h1>DMできます</h1>
<% if logged_in? then %>
<h2>私の名前は <%= current_user.name %></h2>
<h2>私のメールアドレスは <%= current_user.email %></h2>
  <% @users.each do |u| %>
  <p><a href="/users/<%= u.id %>"><%= u.name %>さん</a></p>
  <hr>
  <% end %>
  <%= link_to 'ログアウトする', controller: 'sessions', action: 'destroy'%>
<% else %>
  <%= link_to "ユーザーを登録する", new_user_registration_path %>
  <br>
  <%= link_to "ログインする", new_user_session_path %>
<% end %>

<%= link_to 'ホームに戻る', controller: 'homes'%>
